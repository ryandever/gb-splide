{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "generateblocks/splide",
    "version": "1.0.0",
    "title": "Splide",
    "category": "generateblocks",
    "icon": "smiley",
    "description": "Slider/Carousel for GenerateBlocks",
    "supports": {
        "html": false
    },
    "attributes": {
        "type": {
            "type": "string",
            "default": "slide"
        },
        "perPage": {
            "type": "number",
            "default": 1
        },
        "perPageResponsive": {
            "type": "object",
            "default": {
                "desktop": 1,
                "tablet": 1,
                "mobile": 1
            }
        },
        "perMove": {
            "type": "number",
            "default": 1
        },
        "gap": {
            "type": "string",
            "default": "1rem"
        },
        "autoplay": {
            "type": "boolean",
            "default": true
        },
        "interval": {
            "type": "number",
            "default": 5000
        },
        "pauseOnHover": {
            "type": "boolean",
            "default": true
        },
        "speed": {
            "type": "number",
            "default": 600
        },
        "arrows": {
            "type": "boolean",
            "default": true
        },
        "pagination": {
            "type": "boolean",
            "default": true
        },
        "direction": {
            "type": "string",
            "default": "ltr"
        },
        "rewind": {
            "type": "boolean",
            "default": false
        },
        "height": {
            "type": "string",
            "default": "auto"
        },
        "width": {
            "type": "string",
            "default": "100%"
        },
        "slides": {
            "type": "array",
            "default": []
        }
    },
    "textdomain": "generateblocks",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css"
}